<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <TextView
            android:id="@+id/textViewNazov"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nastavenia"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textViewPopis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginLeft="5dp"
            android:text="V tejto sekcii si môžete vybrať kategórie oznamov ktoré Vás zaujímajú a ktoré Vám budú doručované."
            tools:ignore="HardcodedText" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Switch
            android:id="@+id/switchAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:height="48dp"
            android:enabled="true"
            android:scrollbarSize="4dp"
            android:text="Všetky oznamy"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/switchOznamyOU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:enabled="true"
            android:height="48dp"
            android:text="Oznamy OÚ"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/switchPoruchy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:height="48dp"
            android:enabled="true"
            android:text="Poruchy/Výpadky"
            tools:ignore="HardcodedText,UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/switchPredaj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="120dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:enabled="true"
            android:height="48dp"
            android:text="Predaj"
            tools:ignore="HardcodedText,UseSwitchCompatOrMaterialXml" />


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bottom_background"
            android:elevation="5dp"
            app:itemIconSize="40dp"
            app:itemIconTint="@drawable/item_selector"
            app:itemRippleColor="@android:color/transparent"
            app:labelVisibilityMode="unlabeled"
            style="@style/Widget.MaterialComponents.BottomNavigationView.PrimarySurface"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_menu" />
    </RelativeLayout>

</LinearLayout>